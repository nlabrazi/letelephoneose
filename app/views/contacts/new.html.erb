<div class="container">

  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h1 class="p-5">Formulaire de contact</h1>

      <%= simple_form_for :contact, url: root_path, class: "pinkform" do |f| %>
      
      <div class="form-inputs ">
        <%= f.input :name, label: 'Nom', hint: false, error: 'Votre nom est obligatoire.' %>
        <%= f.input :email, label: 'Email', hint: false, error: 'Votre email est obligatoire.' %>
        <%= f.input :message, as: :text, hint: false, label: 'Votre message' %>
        
        <%= f.button :submit, class: "btn btn-lg btn-pinkwhite btn-block btn-success my-2" %>
      </div>
      
      <% end %>

    </div>
  </div>
</div>
