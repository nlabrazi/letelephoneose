
<h1>Listing artists</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @artists.each do |artist| %>
    <tr>
      <td><%= artist.name %></td>
      <td><%= artist.description %></td>
      <td><%= artist.user.email %></td>
      <td><%= link_to 'Show', artist %></td>
      <% if policy(artist).edit? %>
        <td><%= link_to 'Edit', edit_artist_path(artist) %></td>
      <% end %>
      <% if policy(artist).destroy? %>
        <td><%= link_to 'Destroy', artist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>
