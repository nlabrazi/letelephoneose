<div class="navbar navbar-expand-sm navbar-light navbar-mainbar">

  <%= link_to root_path, class: "navbar-brand" do %>
  	<%= image_tag "https://res.cloudinary.com/borismd/image/upload/v1607416795/Assets/Logo_c551cu.png" %>
  <% end %>
  
  <h1>Le Téléphone Ose</h1>
 	<%= link_to "Nos artistes", artists_path, class: "nav-link" %>
 	<%= link_to "Nous contater", new_contact_path, class: "nav-link" %>
 	<%= link_to "FAQ", "/", class: "nav-link" %>

  <%# if current_user %>
  	<%#= link_to "Dashboard", availability_path(current_user.id), class: "nav-link" %>
  <%# end %>


  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
      <li class="nav-item active">
        <%= link_to "Home", "#", class: "nav-link" %>
      </li>
      <li class="nav-item active">
        <span class="nav-link"> <%= current_user.email %></span>
      </li>
      <li class="nav-item">
        <%= link_to "Messages", "#", class: "nav-link" %>
      </li>
      <li class="nav-item dropdown">
        <% if current_user.avatar.attached? %>
        <%= cl_image_tag current_user.avatar.key, height: 40, width: 40, gravity: :face, class: "dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <% else %>
        <%= image_tag "https://www.flaticon.com/svg/static/icons/svg/848/848043.svg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <% end %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Mon Profil", edit_user_registration_path, class: "dropdown-item" %>
          <%= link_to "Tableau de Bord", dashboard_index_path, class: "dropdown-item" %>
          <div class="dropdown-divider"></div>
          <%= link_to "Deconnexion", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        </div>
      </li>
      <% else %>
      <li class="nav-item">
        <%= link_to "Se connecter", new_user_session_path, class: "nav-link" %>
      </li>
      <% end %>
    </ul>
  </div>
</div>
