<div class="w-75 mx-auto">
  <div class="card my-5">
    <div class="card-body">
      <div class="card-title">
        <div class="w-100 d-flex justify-content-center h1">
          Récapitulatif de ma commande
        </div>
      </div>
      <div class="row">
       <div class="col-4">
        <div class="w-100 d-flex justify-content-center mb-2">
          <div class="overflow-hidden d-flex align-items-center justify-content-center">
            <%= cl_image_tag @artist.artist_pp.key, id: "artist_photo", 'aria-haspopup': true, 'aria-expanded': false, style:"max-width: 100%; max-height: 100%;" %>
          </div>
        </div>
      </div>

      <div class="col-8">
        <div class="h2 custom-font my-2 mt-4 text-center">
          Artiste :
        </div>
        <div class="w-100 d-flex justify-content-center">
          <div style="font-size: 1.2em;">
            <%= @artist.name%>
          </div>
        </div>
        <div class="h2 custom-font my-2 mt-4 text-center">
          Prix :
        </div>
        <div class="text-center" style="font-size: 1.2em;">
          <%= @order.service.price %> €
        </div>
        <div class="h2 custom-font my-2 mt-4 text-center">
          Date :
        </div>
        <div class="text-center" style="font-size: 1.2em;">
          <%= @availability.start_date.strftime("Le %d/%m à %Hh%M") %>
        </div>
        <div class="h2 custom-font my-2 mt-4 text-center">
          Au numéro de téléphone :
        </div>
        <div class="text-center" style="font-size: 1.2em;">
          <%= @order.target %>
        </div>
        <div class="h2 custom-font my-2 mt-4 text-center">
          Résumé de la commande :
        </div>
        <div class="text-center" style="font-size: 1.2em;">
          <%= @order.description %>
        </div>
        <div class="w-100 d-flex justify-content-center my-5">
          <script src="https://js.stripe.com/v3/"></script>
          <%= button_to "Payer", availability_order_charges_path(total: @order.service.price, availability: @availability), class: "btn-pinkwhite px-3 py-1", style: "font-size: 1.4em;", remote: true %>
        </div>
      </div>
    </div>
  </div>
</div>
</div>