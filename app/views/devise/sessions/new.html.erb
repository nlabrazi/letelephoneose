<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <br><br>
      <h1 class="h3 mb-3 font-weight-normal text-center">Connexion</h1>
      <div id="login">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
          required: false,
          autofocus: true,
          input_html: { autocomplete: "email" } %>
          <%= f.input :password,
          required: false,
          input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="actions mt-5">
          <%= f.submit "Se connecter", class: "btn btn-lg btn-primary btn-block" %>
        </div>
        <% end %>
        <div class="or">ou connectez-vous via</div>
        <div class="flex-c-m social-connector">
          <% unless current_user %>
          <% else %>
          <%= link_to "Se deconnecter", destroy_user_session_path, method: :delete %>
          <% end %>
          <a href="#" class="login-social-item bg1">
            <i class="fab fa-facebook-f"></i>
          </a>
          <a href="#" class="login-social-item bg2">
            <i class="fab fa-twitter"></i>
          </a>
          <a href="#" class="login-social-item bg3">
            <i class="fab fa-google"></i>
          </a>
        </div>
        <div class="forgot">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>