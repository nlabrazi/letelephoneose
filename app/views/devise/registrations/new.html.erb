<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <br><br>
      <%= simple_form_for(resource, as: resource_name, html: { class: "form-signin mt-3" }, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>
      <h1 class="h3 mb-3 font-weight-normal text-center">S'enregistrer</h1>
      <div class="form-group">
        <%= f.label :email, "Email" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :last_name, "Nom" %><br />
        <%= f.text_field :last_name, autofocus: true, autocomplete: "Nom", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :first_name, "PrÃ©nom" %><br />
        <%= f.text_field :first_name, autofocus: true, autocomplete: "PrÃ©nom", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :password, "Mot de passe" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "Mot de passe", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation, "Confirmer mot de passe" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "Mot de passe", class: "form-control" %>
      </div>
      <div class="actions mt-5">
        <%= f.submit "S'enregistrer", class: "btn btn-lg btn-primary btn-block" %>
      </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
