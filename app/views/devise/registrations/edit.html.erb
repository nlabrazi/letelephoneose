<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <br><br><br>
      <h1 class="h3 mb-3 font-weight-normal text-center">Modification du profil de <%= @user.first_name %></h1>
      <div class="content">
        <div id="edit">
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.error_notification %>
          <div class="form-inputs">
            <%= f.input :email, required: true, autofocus: true %>
            <%= f.input :first_name, required: true, autofocus: true %>
            <%= f.input :last_name, required: true, autofocus: true %>

            <%= f.file_field :avatar %>

          </div>
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
          <% end %>
          <br><br>
          <%= f.input :password,
          hint: "laisser blanc si pas de modification",
          required: false,
          input_html: { autocomplete: "Nouveau mot de passe" } %>
          <%= f.input :password_confirmation,
          required: false,
          input_html: { autocomplete: "Nouveau mot de passe" } %>
          <%= f.input :current_password,
          hint: "mot de passe actuel pour modifier",
          required: true,
          input_html: { autocomplete: "Mot de passe actuel" } %>
          <% if @user.avatar.attached? %>
          <%#= link_to "Supprimer ma photo de profil", user_remove_path(@user),
          method: :delete,
          data: { confirm: t('.confirm', default: 'Êtes-vous certain ?') },
          class: 'delete' %>
          <% end %>

          <div class="form-actions">
            <%= f.button :submit, "Modifier", class:"btn btn-lg btn-primary btn-block btn-success" %>
          </div>
          <% end %>
          <br><br>
          <h1 class="h3 mb-3 font-weight-normal text-center">Insatisfait ? Supprimer votre compte</h1>
          <%= link_to "Supprimer", registration_path(resource_name), class:"btn btn-lg btn-primary btn-block btn-danger", data: { confirm: "Êtes-vous sur(e)?" }, method: :delete %>
          <br><br>
          <p class="text-center">
            <%= link_to "Annuler", :back, class: "btn btn-lg btn-primary" %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
