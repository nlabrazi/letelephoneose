<table class="table table-bordered">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Heure de début</th>
      <th scope="col">Heure de fin</th>
      <th scope="col">Supprimer ?</th>
    </tr>
  </thead>
  <tbody>
    <% @artist.availabilities.each do |availability| %>
    <tr>
      <td><%= availability.id %></td>
      <td><%= availability.start_date %></td>
      <td><%= availability.end_date %></td>
      <td><%= link_to "Effacer cette disponibilité", artist_availability_path(current_user.id,availability.id),
      method: :delete,
      data: { confirm: t('.confirm', default: 'Etes-vous sûr ?') },
      class: 'delete' %> </td>
    </tr>
  </tbody>
  <% end %>
  <br>
  <% @b.each do |f| %>
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Heure de début</th>
      <th scope="col">Heure de fin</th>
      <th scope="col">Qui</th>
      <th scope="col">Détails</th>
      <th scope="col">Status</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= f.id %></td>
      <td><%= f.description %></td>
    </tr>
  </tbody>
  <% end %>
</table>


<%= simple_form_for [@artist,@availability] do |form| %>
<div class="form-input">
  <%= form.text_field :start_date, data: {behavior: "flatpickr" } %>
  <%= form.text_field :end_date, data: {behavior: "flatpickr" } %>

</div>
<div class="form-action">
  <%= form.submit "Creer une disponibilité", class:"btn btn-primary"%>
</div>
<% end %>
