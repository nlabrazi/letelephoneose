<table class="table table-bordered">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Commandé par</th>
      <th scope="col">Service</th>
      <th scope="col">Pour qui ?</th>
      <th scope="col">Détails</th>
      <th scope="col">Date de début</th>
      <th scope="col">Date de fin</th>
      <th scope="col">Statut</th>
      <th scope="col">Confirmer?</th>
    </tr>
  </thead>
  <tbody>
    <% @find_orders.each do |order| %>
    <tr>
      <td><%= order.id %></td>
      <td><%= order.user.first_name %></td>
      <td><%= order.service.name %></td>
      <td><%= order.target %></td>
      <td><%= order.description %></td>
      <td><%= order.availability.start_date %></td>
      <td><%= order.availability.end_date %></td>
      <td id="status-id"><%= order.status %></td>
      <td> <% if order.status == "pending" %>
        <%= link_to "Valider", artist_availability_order_validate_path(order.availability.artist_id, order.availability_id, order.id), id: "status-v-btn", class: "btn btn-success btn-block", method: :put, data: { turbolinks: false }, remote: true %>
        <%= link_to "Refuser", artist_availability_order_refused_path(order.availability.artist_id, order.availability_id, order.id), id: "status-r-btn", class: "btn btn-danger btn-block", method: :put, data: { turbolinks: false }, remote: true %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<nav aria-label="Page navigation example">
  <ul class="pagination">
    <li class="page-item"><%= will_paginate @orders %></li>
  </ul>
</nav>
